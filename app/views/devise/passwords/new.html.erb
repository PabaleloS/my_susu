<section class="vh-100" style="background-color: #D9D9D9;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">

 <div class="login_img">
    <img width="120" height="120" src="https://res.cloudinary.com/dvql3swac/image/upload/v1710994722/mySUSU_tbbiej.gif" alt="Centered Image">
  </div>

      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Reset your mySusu Password</h3>

              <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Send me reset password instructions" %>
                </div>
              <% end %>

                <hr class="my-4">

            <%= render "devise/shared/links" %>


          </div>
        </div>
      </div>
    </div>
  </div>
</section>

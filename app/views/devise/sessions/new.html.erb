<section class="vh-100" style="background-color: #D9D9D9;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Sign into mySusu</h3>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            label: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" },
                            placeholder: "Email Address" %>
                <%= f.input :password,
                            label: false,
                            required: false,
                            input_html: { autocomplete: "current-password" },
                            placeholder: "Password" %>
                <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
                <hr class="my-4">

            <%= render "devise/shared/links" %>


          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<br>
  <div class="container">
  <br>
    <div id="page_main">
      <div class="members_container">

      <a href="#" onclick="history.back(); return false;"><img src="https://img.icons8.com/fluency-systems-filled/48/long-arrow-left.png"/></a>
      <br>
      <br>
      <div id="header_div">
        <h1><%= @susu.name %></h1>
      </div>
        <br>

      <div id="members_big_card">
        <% @members.each do |member| %>
          <div id="user_list_card">
            <div id="members_body">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
              <div id="members_user_text">
              <h5><%= member.user.first_name %></h5>
              <div>
              <% if @last_deposits[member.id] %>
                <p>Last Deposit Date: <%= @last_deposits[member.id][:date] %></p>
                <p>Last Deposit Amount: <%= @last_deposits[member.id][:agree_amount] %></p>
              <% else %>
                <p>No deposits yet.</p>
              <% end %>
              </div>
              </div>
            </div>
          </div>
        <% end %>
        <br>
        <div style="text-align: center;">
        <%= link_to "Invite New Member", new_susu_member_path(@susu), class: "track-button" %>
        </div>
        </div>
        </div>
        </div>
        </div>

<div class="d-flex flex-column min-vh-120">
  <div class="messages-container border p-3">
    <div class="column no-gutters">
      <div class="page-content">
          <% @susu.messages.each do |message| %>
            <div id="message-<%= message.id %>">
              <div class="mb-3 mt-3">
                <div class="card w-100">
                  <div class="card-body bg-white">
                    <img width="15" height="15" class="avatar-messages" src="https://kitt.lewagon.com/placeholder/users/ssaunier"/>
                    <small>
                      <strong><%= message.member.user.first_name %></strong>
                      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
                    </small>
                    <p><%= message.content %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
  <div class="form-container bg-white px-2 pt-2">
    <%= simple_form_for [@susu, @message],
        html: {class: "test d-flex"} do |f|
      %>
        <%= f.input :content,
          label: false,
          wrapper_html: { class: 'w-75 border border-warning' },
          placeholder: "Message #{@susu.name}"
        %>
        <%= f.submit "Send", class: "extra-rounded btn btn-warning mb-3 w-25 text-white" %>
    <% end %>
  </div>
</div>

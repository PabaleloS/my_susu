<div class="d-flex flex-column min-vh-100">
  <div class="go-home bg-white">
    <%= link_to susu_path(@susu), class: "link" do %>
      <i class="fa-solid fa-angle-left fa-3x" style="color: black;"></i>
    <% end %>
  </div>
  <div class="messages-container border bg-white">
    <div class="column no-gutters">
      <div class="page-content">
          <% @susu.messages.each do |message| %>
            <div id="message-<%= message.id %>">
              <div class="flex-grow-1 mb-3">
                <div class="card w-100">
                  <div class="card-body">
                    <small>
                      <strong><%= message.member.user.first_name %></strong>
                      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
                    </small>
                  <p><%= message.content %></p>
                </div>
              </div>
            </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <div class="form-container bg-white px-2 pt-2">
    <%= simple_form_for [@susu, @message],
        html: {class: "test d-flex"} do |f|
      %>
        <%= f.input :content,
          label: false,
          wrapper_html: { class: 'w-75 border border-warning' },
          placeholder: "Message ##{@susu.name}"
        %>
        <%= f.submit "Send", class: "btn btn-warning mb-3 w-25 text-white" %>
    <% end %>
  </div>

</div>

<div class="container p-3">
  <div class="column no-gutters">
    <% @susu.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <div class="flex-grow-1 mb-3">  <div class="card w-100">
          <div class="card-body">
            <small>
              <strong><%= message.member.user.first_name %></strong>
              <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
            </small>
            <p><%= message.content %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
    <div class="form-container">
      <%= simple_form_for [@susu, @message],
          html: {class: "test d-flex"} do |f|
        %>
          <%= f.input :content,
            label: false,
            wrapper_html: { class: 'w-75' },
            placeholder: "Message ##{@susu.name}"
          %>
          <%= f.submit "Send", class: "btn btn-primary mb-3 w-25" %>
      <% end %>
    </div>
</div>

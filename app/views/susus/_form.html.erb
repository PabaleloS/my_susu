<%= form_with(model: Susu.new, local: false, data: { turbo: true }) do |form| %>

    <div class="mb-3 string optional susu_name">
    <%= form.text_field :name, class: "form-control string optional", placeholder: "SuSu name" %>
    </div>

    <div class="form-outline mx-auto" data-mdb-input-init>
    <%= form.text_area :description, class: "form-control", id: "textAreaExample", rows: "4", placeholder: "Description" %>
    </div>
    <br>

  <h3>Set Monthly Contribution Rate</h3>

  <br>

  <%= form.radio_button :agree_amount, "500", style: "transform: scale(1.5);" %>
  <%= form.label :agree_amount, "500", value: '500' %>&nbsp;&nbsp;&nbsp;&nbsp;

  <%= form.radio_button :agree_amount, "1000", style: "transform: scale(1.5);" %>
  <%= form.label :agree_amount, "1000", value: '1000' %>&nbsp;&nbsp;&nbsp;&nbsp;

  <%= form.radio_button :agree_amount, "1500", style: "transform: scale(1.5);" %>
  <%= form.label :agree_amount, "1500", value: '1500' %>&nbsp;&nbsp;&nbsp;&nbsp;

  <%= form.radio_button :agree_amount, "2000", style: "transform: scale(1.5);" %>
  <%= form.label :agree_amount, "2000", value: '2000' %>&nbsp;&nbsp;&nbsp;&nbsp;

  <br>

  <br>

  <%= form.submit "Create SuSu", class: "btn btn-orange btn-sm", style: "font-weight: bold; color: white; width: 288px; height: 63px; flex-shrink: 0; margin: auto;" %>

  <% end %>

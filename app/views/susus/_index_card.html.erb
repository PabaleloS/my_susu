<br>

<% if @susus.any? %>
  <% @susus.each do |susu| %>
    <% if @member.status == "pending" %>
      <div class="invite-card">
        <div id="invite_group_banner">
          <div>
            <h6><%= link_to susu.name, susu_path(susu) %></h6>
            <p><%= susu.members.count %> members join today</p>
          </div>
        </div>
        <div id="group_b_details">
          <div class="avatar_i">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
            <p>You've been invited</p>
          </div>
          <button type="button" class="btn btn-light">Join</button>
        </div>
      </div>
    <% else %>
      No susu invitations
    <% end %>
  <% end %>
<% else %>
  <p>No susus available.</p>
<% end %>

<br>
<div class="container">
  <br>
  <div id="page_main">

    <div id="show_header_div">

      <div id="header_user">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
        <div id="header_user_text">
          <h6><%= current_user.first_name %> <%= current_user.last_name %></h6>
          <p> Welcome back! ðŸŒŸ</p>
          <%#= @susu.balance %>
        </div>
      </div>

      <img width="20" height="20" src="https://img.icons8.com/ios/50/appointment-reminders--v1.png" alt="alert"/>
    </div>

    <%#= button_to "disburse", disburse_path(@susu) %>
    <%= render partial: 'susus/show_card', susu: @susu %>
    <br>

    <% if @all_members.any? %>
    <div id="next_withdraw_big_card">
      <p> Next Withdraw </p>
      <% @accepted_members.each do |member|  %>
      <div id="withdraw_list_card">
        <div id="set_width">
          <img width="44" height="53" src="https://res.cloudinary.com/dvql3swac/image/upload/v1710413992/knanllixywtz69qieml5.png" alt="susu_member"/>
          <div id="withdraw_user_text">
            <h6> <%= member.user.first_name %>  </h6>
            <p> <%= member.user.updated_at.strftime('%Y-%m-%d') %></p>
            <p> Balance: <%= member.balance %></p>
            <!-- <p>Has received disbursal in this cycle: <%#= member.has_received_disbursement %></p>-->
          </div>
        </div>
        <img width="33" height="41" src="https://res.cloudinary.com/dvql3swac/image/upload/v1710414522/twgfu6nrs9zg1gungee0.png" alt="leaderboard"/>
      </div>
      <% end %>
    </div>
    <% elsif @pending_members.present? %>

    <% @pending_members.each do |member| %>
    <div id="next_withdraw_big_card">
      <p> Pending Members </p>
      <div id="withdraw_list_card">
        <div id="set_width">
          <img width="44" height="53" src="https://res.cloudinary.com/dvql3swac/image/upload/v1710413992/knanllixywtz69qieml5.png" alt="susu_member"/>
          <div id="withdraw_user_text">
            <h6> <%= member.user.first_name %>  </h6>
            <p> <%= member.user.updated_at.strftime('%Y-%m-%d') %></p>
          </div>
        </div>
        <img width="33" height="41" src="https://res.cloudinary.com/dvql3swac/image/upload/v1710414522/twgfu6nrs9zg1gungee0.png" alt="leaderboard"/>
      </div>
      <img width="33" height="41" src="https://res.cloudinary.com/dvql3swac/image/upload/v1710414522/twgfu6nrs9zg1gungee0.png" alt="leaderboard"/>
    </div>
    <% end %>
    <% else %>
    <p>This susu has no members</p>
    <% end %>
  </div>
  <%= render "shared/link", class: "row" %>
</div>

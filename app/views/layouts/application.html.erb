<!DOCTYPE html>
<html>
  <head>
    <title>MySusu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= javascript_include_tag 'paystack' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag 'susu_show' %>
    <%= javascript_include_tag 'page_reload' %>
    <%= javascript_include_tag 'deposit' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= favicon_link_tag "favicon.ico" %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="d-flex flex-column min-vh-100">
      <article class="flex-grow-1">
        <%= render "shared/flashes" %>
        <%= yield %>
      </article>
      <br>
      <br>
      <% if @susu.present? && !(controller_name == 'messages' && action_name == 'index') %>
        <%= render "shared/navbar", class: "row" %>
      <% end %>
      <%# if @susu.present? %>
      <%#= render "shared/navbar", class: "row" %>
      <%# end %>
    </div>
    <!--to make the alert disappear after some time-->

    <script src="https://js.paystack.co/v1/inline.js"></script>
  </body>
</html>
